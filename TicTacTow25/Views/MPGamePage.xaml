<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicTacTow25.Views.MPGamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TicTacTow25.ViewModels"
    xmlns:m="clr-namespace:TicTacTow25.Models"
    Title="MPGamePage"
    x:DataType="vm:MPGamePageVM">
    <VerticalStackLayout>
        <Grid x:Name="grdOponnents" />
        <Label
            Margin="0,1,0,1"
            HorizontalOptions="Center"
            Text="{Binding Message}" />
        <BoxView HeightRequest="1" BackgroundColor="Blue"/>
        <Entry
            Margin="0,2,0,0"
            HorizontalOptions="Center"
            Text="{Binding MyMessage}"
            Placeholder="Enter Your Message" />
        <Button
            Margin="0,1,0,0"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.SendMessage}"
            Command="{Binding SendMessageCommand}" />
        <Label
            Margin="0,10,0,0"
            Padding="12"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            VerticalTextAlignment="Center"
            Text="{Binding MyName}"
            BackgroundColor="{Binding IsMyTurn, Converter={StaticResource boolToColorConvert}}"/>
    </VerticalStackLayout>
</ContentPage>