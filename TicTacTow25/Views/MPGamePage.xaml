<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicTacTow25.Views.MPGamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:TicTacTow25.Models"
    xmlns:vm="clr-namespace:TicTacTow25.ViewModels"
    Title="MPGamePage"
    x:DataType="vm:MPGamePageVM">
    <VerticalStackLayout>
        <Grid x:Name="grdOponnents" />
        <Label
            Margin="0,1,0,1"
            HorizontalOptions="Center"
            Text="{Binding Message}" />
        <BoxView BackgroundColor="Blue" HeightRequest="1" />
        <Entry
            Margin="0,2,0,0"
            HorizontalOptions="Center"
            Placeholder="Enter Your Message"
            Text="{Binding MyMessage}" />
        <Button
            Margin="0,1,0,0"
            Command="{Binding SendMessageCommand}"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.SendMessage}" />
        <Label
            Margin="0,10,0,0"
            Padding="12"
            BackgroundColor="{Binding IsMyTurn, Converter={StaticResource boolToColorConvert}}"
            HorizontalOptions="Center"
            Text="{Binding MyName}"
            VerticalOptions="Center"
            VerticalTextAlignment="Center" />
    </VerticalStackLayout>
</ContentPage>